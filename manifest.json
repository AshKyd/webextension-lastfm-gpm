{
  "manifest_version": 2,
  "name": "webextension-lastfm",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://play.google.com/music/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": ["background.min.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/page-16.png",
      "32": "icons/page-32.png"
    }
  }

}
